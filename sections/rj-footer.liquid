{%- comment -%}
  Reem Jawad Footer - Timeless Elegance Design
{%- endcomment -%}

<footer class="rj-footer" data-section-id="{{ section.id }}">
  <div class="rj-footer__container">
    <div class="rj-footer__brand">
      <h2 class="rj-footer__title">{{ section.settings.brand_text | default: 'Timeless Elegance' }}</h2>
    </div>
    
    <div class="rj-footer__links">
      <a href="/pages/about" class="rj-footer__link">{{ 'footer.about_us' | t | default: 'About Us' }}</a>
      <a href="/pages/privacy" class="rj-footer__link">{{ 'footer.privacy' | t | default: 'Privacy Policy' }}</a>
      <a href="/pages/faq" class="rj-footer__link">{{ 'footer.faq' | t | default: 'FAQ' }}</a>
      <a href="/pages/contact" class="rj-footer__link">{{ 'footer.contact' | t | default: 'Contact' }}</a>
    </div>
    
    <div class="rj-footer__social">
      {%- assign instagram_url = section.settings.instagram_url | default: 'https://instagram.com/reem_jawad1' -%}
